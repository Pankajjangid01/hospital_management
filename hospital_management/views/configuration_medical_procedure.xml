<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="medical_procedure_form" model="ir.ui.view">
        <field name="name">medical.procedure.form</field>
        <field name="model">medical.procedure</field>
        <field name="arch" type="xml">
            <form string="Medical Procedure">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="long_text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="medical_procedure_list" model="ir.ui.view">
        <field name="name">medical.procedure.list</field>
        <field name="model">medical.procedure</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="long_text"/>
            </list>
        </field>
    </record>
    <record id="medical_procedure_actions" model="ir.actions.act_window">
        <field name="name">Medical Procedure</field>
        <field name="res_model">medical.procedure</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="configuration_medical_procedure_menu" name="Medical Procedures" parent="configuration_menu"/>
    <menuitem id="medical_procedure_menu" name="Medical Procedures" parent="configuration_medical_procedure_menu" action="medical_procedure_actions"/>

</odoo>