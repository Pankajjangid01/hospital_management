<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="pathalogy_groups_form" model="ir.ui.view">
        <field name="name">pathalogy.groups.form</field>
        <field name="model">pathalogy.groups</field>
        <field name="arch" type="xml">
            <form string="Pathalogy Groups Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="short_description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="pathalogy_groups_list" model="ir.ui.view">
        <field name="name">pathalogy.groups.list</field>
        <field name="model">pathalogy.groups</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="short_description"/>
            </list>
        </field>
    </record>
    <record id="pathalogy_groups_actions" model="ir.actions.act_window">
        <field name="name">Pathalogy Groups Data</field>
        <field name="res_model">pathalogy.groups</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>