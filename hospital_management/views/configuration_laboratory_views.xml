<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="testing_units_form" model="ir.ui.view">
        <field name="name">testing.units.form</field>
        <field name="model">testing.units</field>
        <field name="arch" type="xml">
            <form string="Lab Testing Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="testing_units_list" model="ir.ui.view">
        <field name="name">testing.units.list</field>
        <field name="model">testing.units</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>
    <record id="testing_units_actions" model="ir.actions.act_window">
        <field name="name">Lab Testing units</field>
        <field name="res_model">testing.units</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>