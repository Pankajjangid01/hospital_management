<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- health center building form -->
    <record id="health_center_building_form" model="ir.ui.view">
        <field name="name">health.center.building.form</field>
        <field name="model">health.center.buildings</field>
        <field name="arch" type="xml">
            <form string="Health Center Buildings">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="building_institution"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

