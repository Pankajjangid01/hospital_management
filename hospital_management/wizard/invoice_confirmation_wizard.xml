<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="invoice_confirmation_form" model="ir.ui.view">
        <field name="name">invoice.confirmation.form</field>
        <field name="model">invoice.confirmation.wizard</field>
        <field name="arch" type="xml">
            <form string="Create invoice">
                    <h1>Do you want to generate the appointment invoice?</h1>
                    <h1>Create Invoice</h1>
                    <group>
                        <field name="appointment_id" invisible="1"/>
                    </group>
                    <footer>
                        <button name="create_invoice" type="object" string="Create Invoice" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
        </field>
    </record>
</odoo>