<odoo>
    <record id="view_hospital_bed_transfer_wizard" model="ir.ui.view">
        <field name="name">hospital.bed.transfer.wizard.form</field>
        <field name="model">hospital.bed.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Bed Transfer">
                <group>
                    <field name="administration_id"/>
                    <field name="from_bed" readonly="1"/>
                    <field name="to_bed"/>
                    <field name="reason"/>
                </group>
                <footer>
                    <button name="action_transfer_bed" type="object" string="Transfer" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
